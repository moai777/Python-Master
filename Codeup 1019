Me

year, month, day = int(input()).split('.')
if int(month) < 10:
    if int(day) < 10:
        print(year + '.' + '0' + month + '.' + '0' + day)
    else:
        print(year + '.' + '0' + month + '.' + day)
elif int(month) >= 10:
    if int(day) < 10:
        print(year + '.' + month + '.' + '0' + day)
    else:
        print(year + '.' + month + '.' + day)
year = 2021
month = 12
day = 3
print(year,month,day)





Answer

a,b,c = input().split('.')
print('%04d' % int(a), end='.')
print('%02d' % int(b), end='.')
print('%02d' % int(c))







